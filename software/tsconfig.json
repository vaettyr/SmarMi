{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],
        "skipLibCheck": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,  
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include":["src/**/*"]
}